<p id="notice"><%= notice %></p>

<h1>Listing Discipleship Classes</h1>

<table>
  <thead>
    <tr>
      <th>Class date</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discipleship_classes.each do |discipleship_class| %>
      <tr>
        <td><%= discipleship_class.class_date %></td>
        <td><%= discipleship_class.title %></td>
        <td><%= link_to 'Show', discipleship_class %></td>
        <td><%= link_to 'Edit', edit_discipleship_class_path(discipleship_class) %></td>
        <td><%= link_to 'Destroy', discipleship_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

